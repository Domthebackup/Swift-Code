import UIKit

class ViewController: UIViewController {

    @IBOutlet weak var input: UITextField!
    @IBOutlet weak var tip_amount: UISegmentedControl!
    @IBOutlet weak var total_amount: UILabel!
    @IBOutlet weak var text: UILabel!
    
    @IBOutlet weak var tip_label: UILabel!
    @IBAction func click(_ sender: Any) {
        
        let bill = Double(input.text!) ?? 0
    
        let tipPercentages = [0.10, 0.20, 0.25]
        let tip = bill * tipPercentages[tip_amount.selectedSegmentIndex]
        let total =  bill + tip
        
        total_amount.text = String(format: "$%.2f", total)
        
        tip_label.text = String(format: "$%.2f", tip)
    }
    
    
    override func viewDidLoad() {
        super.viewDidLoad()
        // Do any additional setup after loading the view.
    }
}
